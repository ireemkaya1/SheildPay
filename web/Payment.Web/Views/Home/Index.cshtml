@model List<Payment.Web.Models.Transaction>

<h2>Dashboard (Son 5 İşlem)</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tutar</th>
            <th>Tarih</th>
            <th>Fraud</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.Id</td>
            <td>@t.Amount</td>
            <td>@t.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
            <td>
                @if (t.IsFraud)
                {
                    <span class="badge bg-danger">Fraud</span>
                }
                else
                {
                    <span class="badge bg-success">Normal</span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

