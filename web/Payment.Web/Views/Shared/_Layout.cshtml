@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpAcc

@{
    var username = HttpAcc.HttpContext?.Session.GetString("Username") 
                   ?? HttpAcc.HttpContext?.Session.GetString("username");

    var role = HttpAcc.HttpContext?.Session.GetString("Role") 
               ?? HttpAcc.HttpContext?.Session.GetString("role");
}

<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ShieldPay</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">ShieldPay</a>

                <!-- Mobil hamburger -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Menü">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Transactions" asp-action="Index">Transactions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reports" asp-action="Index">Reports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Settings" asp-action="Index">Settings</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        @if (!string.IsNullOrWhiteSpace(username))
                        {
                            <span class="text-light small">
                                @username @if(!string.IsNullOrWhiteSpace(role)){ <text>(@role)</text> }
                            </span>

                            <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Logout">
                                Logout
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        }
                    </div>
                </div>

            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3">
        <div class="container">
            <span class="text-muted">© @DateTime.Now.Year - ShieldPay</span>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
